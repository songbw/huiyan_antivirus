/**
   create huiyan_antivirus databases
*/
/** createdb -E utf8 -T template0  huiyan_antivirus; */

/** create customers table */
drop table customers;
create table customers (
       id serial primary key,
       cid numeric(64,0) NOT NULL,
       company character varying(255),
       address character varying(255),
       telephone character varying(255),
       appKey character varying(255),
       secert character varying(255),
       username character varying(255),
       passwd character varying(255),
       status character varying(255),
       valid integer DEFAULT 1,
       created_at timestamp without time zone DEFAULT now(),
       updated_at timestamp without time zone);

/** create client_info table*/
drop table client_info;
create table client_info (
       id serial primary key,
       ciid numeric(64,0) NOT NULL,
       cid numeric(64,0) NOT NULL,
       uname character varying(255),
       sex character varying(255),
       age integer DEFAULT 1,
       nickname character varying(255),
       email character varying(255),
       telphone character varying(255),
       cpuModel character varying(255),
       cpuKernel integer DEFAULT 1,
       cpuFrequency character varying(255),
       ramSize character varying(255),
       romSize character varying(255),
       screenSize character varying(255),
       hardwareId character varying(255),
       operators character varying(255),
       sysName character varying(255),
       sysVersion character varying(255),
       telVersion character varying(255),
       telBrand character varying(255),
       telModel character varying(255),
       version character varying(255),
       virusDataVersion character varying(255),
       plusHostVersion character varying(255),
       appTime timestamp without time zone,
       createdAt timestamp without time zone DEFAULT now(),
       updateAt timestamp without time zone
);

/** create killing table */
drop table killing;
create table killing (
       id serial primary key,
       kid numeric(64,0) NOT NULL,
       cid numeric(64,0) NOT NULL,
       ciid numeric(64,0) NOT NULL,
       spendTime integer DEFAULT 0,
       killingTime timestamp without time zone,
       killingType character varying(255),
       status character varying(255),
       createAt timestamp without time zone DEFAULT now(),
       updateAt timestamp without time zone
       );

/** create virus table */
drop table virus;
create table virus (
       id serial primary key,
       vid numeric(64,0) NOT NULL,
       kid numeric(64,0) NOT NULL,
       virusId integer DEFAULT 0,
       virusName character varying(255),
       hostAppName character varying(255),
       createAt timestamp without time zone DEFAULT now()
);

/** create feedback table */
drop table feedback;
create table feedback (
       id serial primary key,
       fid numeric(64,0) NOT NULL,
       cid numeric(64,0) NOT NULL,
       ciid numeric(64,0) NOT NULL,
       appTime timestamp without time zone,
       actionType character varying(255),
       text character varying(255),
       createAt timestamp without time zone DEFAULT now()
);

/** create apps table */
drop table apps;
create table apps (
       id serial primary key,
       aid numeric(64,0) NOT NULL,
       fid numeric(64,0) NOT NULL,
       appName character varying(255),
       appVersion character varying(255),
       packageName character varying(255),
       cacheSize character varying(255),
       dataSize character varying(255),
       createAt timestamp without time zone DEFAULT now()
);
